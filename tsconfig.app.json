{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "tests/**/*"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "chrome"]
  }
}
